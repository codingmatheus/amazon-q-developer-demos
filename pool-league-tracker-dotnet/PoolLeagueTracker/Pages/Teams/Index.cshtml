@page
@model PoolLeagueTracker.Pages.Teams.IndexModel
@{
    ViewData["Title"] = "Teams";
}

<h1>Teams</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New Team</a>
</p>

<div class="card shadow">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">Team Rankings</h5>
    </div>
    <div class="card-body">
        @if (Model.Teams.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-success">
                        <tr>
                            <th>Rank</th>
                            <th>Team</th>
                            <th>Location</th>
                            <th>Played</th>
                            <th>Won</th>
                            <th>Lost</th>
                            <th>Drawn</th>
                            <th>Points</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int rank = 1;}
                        @foreach (var team in Model.Teams)
                        {
                            <tr>
                                <td>@(rank++)</td>
                                <td>@team.Name</td>
                                <td>@team.Location</td>
                                <td>@team.MatchesPlayed</td>
                                <td>@team.Wins</td>
                                <td>@team.Losses</td>
                                <td>@team.Draws</td>
                                <td>@team.Points</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-page="./Details" asp-route-id="@team.Id" class="btn btn-sm btn-outline-success">Details</a>
                                        <a asp-page="./Edit" asp-route-id="@team.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No teams found.</p>
        }
    </div>
</div>
